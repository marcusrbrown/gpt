{
  "extends": ["@tsconfig/strictest/tsconfig.json", "@tsconfig/node20/tsconfig.json"],
  "compilerOptions": {
    "incremental": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleDetection": "force",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true
  },
  "exclude": ["node_modules", "dist", "src"],
  "include": ["."]
}
