{
  "name": "gpt",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "bootstrap": "pnpm install --prefer-offline --loglevel warn",
    "dev": "vite",
    "build": "tsgo && vite build",
    "test": "vitest run",
    "prepare": "simple-git-hooks",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test tests/e2e/**/*.spec.ts",
    "test:visual": "playwright test --config=playwright-visual.config.ts",
    "test:visual:ci": "playwright test --config=playwright-visual.config.ts tests/visual/homepage.visual.spec.ts",
    "test:visual:ui": "playwright test --config=playwright-visual.config.ts --ui",
    "test:visual:update": "playwright test --config=playwright-visual.config.ts --update-snapshots",
    "test:accessibility": "playwright test tests/accessibility/**/*.spec.ts",
    "test:performance": "playwright test --config=playwright-performance.config.ts",
    "test:aggregate": "tsx scripts/aggregate-test-results.ts",
    "fix": "eslint --fix",
    "lint": "eslint",
    "preview": "vite preview"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm exec lint-staged"
  },
  "lint-staged": {
    "*.{ts,js,jsx,tsx,css,md,json,toml,yaml,yml}": [
      "eslint --fix"
    ]
  },
  "prettier": "@bfra.me/prettier-config/120-proof",
  "dependencies": {
    "@heroui/react": "2.8.6",
    "@langchain/anthropic": "1.3.0",
    "@langchain/core": "1.1.5",
    "@langchain/langgraph": "1.0.4",
    "@langchain/openai": "1.2.0",
    "@monaco-editor/react": "4.7.0",
    "@react-aria/ssr": "3.9.10",
    "clsx": "2.1.1",
    "langchain": "1.2.0",
    "lru-cache": "11.2.4",
    "lucide-react": "0.555.0",
    "next-themes": "0.4.6",
    "openai": "6.10.0",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "react-router-dom": "7.10.1",
    "uuid": "13.0.0",
    "zod": "4.2.0"
  },
  "devDependencies": {
    "@axe-core/playwright": "4.11.0",
    "@bfra.me/eslint-config": "0.47.4",
    "@bfra.me/prettier-config": "0.16.6",
    "@bfra.me/tsconfig": "0.12.1",
    "@eslint-react/eslint-plugin": "2.3.13",
    "@playwright/test": "1.57.0",
    "@tailwindcss/typography": "0.5.19",
    "@tailwindcss/vite": "4.1.18",
    "@testing-library/jest-dom": "6.9.1",
    "@testing-library/react": "16.3.1",
    "@testing-library/user-event": "14.6.1",
    "@types/node": "24.10.3",
    "@types/react": "19.2.7",
    "@types/react-dom": "19.2.3",
    "@typescript/native-preview": "7.0.0-dev.20251215.1",
    "@vitejs/plugin-react-swc": "4.2.2",
    "@vitest/coverage-v8": "4.0.15",
    "@vitest/eslint-plugin": "1.5.2",
    "autoprefixer": "10.4.23",
    "eslint": "9.39.2",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-prettier": "5.5.4",
    "eslint-plugin-react-hooks": "7.0.1",
    "eslint-plugin-react-refresh": "0.4.24",
    "jiti": "2.6.1",
    "jsdom": "27.3.0",
    "lighthouse": "13.0.1",
    "lint-staged": "16.2.7",
    "playwright-lighthouse": "4.0.0",
    "prettier": "3.7.4",
    "simple-git-hooks": "2.13.1",
    "tailwindcss": "4.1.18",
    "typescript": "5.9.3",
    "vite": "7.3.0",
    "vite-tsconfig-paths": "5.1.4",
    "vitest": "4.0.15"
  },
  "packageManager": "pnpm@10.26.0"
}
